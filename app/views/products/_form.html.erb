<%= render "layouts/errors", :object => @product %>

<div class="row">
  <div class="col s6">
    <%= form_for @product do |f| %>
    <%= f.text_field :name %>
    <%= f.label :name %>
    <%=  f.text_field :description%>
    <%=  f.label :description%>
    <%=  f.text_field :cost%>
    <%=  f.label :cost %>
    <%=  f.text_field :country_origin%>
    <%=  f.label :country_origin%>
    <br>
    <%=  f.submit 'Submit', :class => 'btn'%>

  </div>

</div>
<% end %>
