<%= content_for(:navbar) do %>
  <li><%= link_to "Products", products_path %></li>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Delete", product_path(@product), :data => {:confirm => "Are you sure you want to delete this product?", :method => "delete"} %></li>
<% end %>


<div class="fill">
  <h4><%= @product.name %></h4>
  <%= image_tag @product.picture, :class => "medium_image" %>
  <p><strong><%= @product.description %></strong></p>
  <li><%= @product.cost %></li>
  <li><%= @product.country_origin %></li>

</div>
